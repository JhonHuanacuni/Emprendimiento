---
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

const { title = "Mi Sitio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" href="/store.png" type="image/x-icon" />

    <title>{title} | Mi Tienda</title>
  </head>
  <body>
    <!-- 🔹 NAVBAR IMPORTADO -->
    <Navbar />

    <!-- 🔹 CONTENIDO DINÁMICO -->
    <main>
      <slot />
    </main>

    <!-- 🔹 FOOTER IMPORTADO -->
    <Footer />
  </body>
</html>
