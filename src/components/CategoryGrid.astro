---
const { categories } = Astro.props;
---
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {categories.map((category: any) => (
    <a href={category.link} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
      <h2 class="text-2xl font-semibold text-gray-900">{category.nombre}</h2>
      <p class="text-gray-600">{category.descripcion}</p>
    </a>
  ))}
</div>
