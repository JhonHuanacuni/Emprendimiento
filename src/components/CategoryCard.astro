---
const { categoria } = Astro.props;
---

<a href={`/${categoria.nombre}`} class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition transform hover:scale-105">
  <div class="text-center">
    <span class="text-4xl">{categoria.icono}</span>
    <h2 class="text-2xl font-semibold text-gray-900 mt-4">{categoria.nombre.charAt(0).toUpperCase() + categoria.nombre.slice(1)}</h2>
    <p class="text-gray-600 mt-2">{categoria.descripcion}</p>
  </div>
</a>