<div class="container mx-auto px-4 py-10">
  <div class="flex flex-col md:flex-row gap-8">
    <!-- Im√°genes -->
    <div class="md:w-1/2 flex flex-col gap-4">
      <div class="w-full h-[400px] overflow-hidden rounded-xl shadow-xl">
        <img
          id="imagenPrincipal"
          src={imagenes[0]}
          alt={producto.nombre}
          class="w-full h-full object-cover"
        />
      </div>
      {imagenes.length > 1 && (
        <div class="flex gap-4 justify-center">
          {imagenes.map((img, i) => (
            <img
              src={img}
              alt={`${producto.nombre} ${i + 1}`}
              class="miniatura w-16 h-20 object-cover rounded cursor-pointer border-2 border-transparent hover:border-blue-400 transition"
            />
          ))}
        </div>
      )}
    </div>

    <!-- Detalles -->
    <div class="md:w-2/3 space-y-4">
      <p class="text-sm text-gray-500 uppercase">Categor√≠a: Libros</p>

      <h1 class="text-3xl font-bold text-gray-800 mt-2 mb-4">
        {producto.nombre}
      </h1>

      {producto.autor && <p><strong>Autor:</strong> {producto.autor}</p>}
      {producto.editorial && <p><strong>Editorial:</strong> {producto.editorial}</p>}
      {producto.idioma && <p><strong>Idioma:</strong> {producto.idioma}</p>}
      {producto.paginas && <p><strong>P√°ginas:</strong> {producto.paginas}</p>}
      {producto.publicacion && <p><strong>Publicado:</strong> {producto.publicacion}</p>}
      {generos.length > 0 && (
        <p><strong>G√©nero:</strong> {generos.join(", ")}</p>
      )}
      {producto.valoracion && (
        <p class="text-yellow-500 font-semibold">
          ‚≠ê Valoraci√≥n: {producto.valoracion}/5
        </p>
      )}

      <!-- Precio y formatos -->
      <div class="space-y-4">
        {precios.length > 1 ? (
          <>
            <div class="flex gap-4">
              <button
                id="btnTapaBlanda"
                data-precio={precios[0]}
                class="px-4 py-2 rounded-lg font-semibold bg-blue-600 text-white shadow-lg"
              >
                Tapa blanda
              </button>
              <button
                id="btnTapaDura"
                data-precio={precios[1]}
                class="px-4 py-2 rounded-lg font-semibold bg-gray-200 text-gray-800"
              >
                Tapa dura
              </button>
            </div>
            <div id="precioLibro" class="text-2xl font-bold text-green-600">
              {moneda}{precios[0].toFixed(2)}
            </div>
          </>
        ) : (
          <div id="precioLibro" class="text-2xl font-bold text-green-600">
            {moneda}{precios[0]?.toFixed(2)}
          </div>
        )}
      </div>

      <!-- Comprar -->
      {producto.link && (
        <a
          href={Array.isArray(producto.link) ? producto.link[0] : producto.link}
          target="_blank"
          class="block bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-bold text-center transition"
        >
          Comprar Ahora
        </a>
      )}

      <!-- Descripci√≥n -->
      <div>
        <h3 class="text-xl font-semibold">Descripci√≥n</h3>
        <p class="text-gray-700 mt-2 leading-relaxed">{producto.descripcion}</p>
      </div>
    </div>
  </div>
</div>

<!-- Script funcional -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const imagenPrincipal = document.getElementById("imagenPrincipal");
    const miniaturas = document.querySelectorAll(".miniatura");
    const btnTapaBlanda = document.getElementById("btnTapaBlanda");
    const btnTapaDura = document.getElementById("btnTapaDura");
    const precioLibro = document.getElementById("precioLibro");

    console.log("üìå Miniaturas encontradas:", miniaturas.length);
    console.log("üìå Bot√≥n tapa blanda:", btnTapaBlanda);
    console.log("üìå Bot√≥n tapa dura:", btnTapaDura);
    console.log("üìå Precio div:", precioLibro);

    if (!imagenPrincipal || !precioLibro) {
      console.warn("‚ö†Ô∏è No se encontr√≥ imagenPrincipal o precioLibro.");
      return;
    }

    // Cambiar imagen principal
    miniaturas.forEach((mini) => {
      console.log("üñºÔ∏è Miniatura:", mini.src);
      mini.addEventListener("click", () => {
        imagenPrincipal.src = mini.src;
        console.log("‚úÖ Imagen principal actualizada a:", mini.src);
      });
    });

    // Cambiar precio
    function actualizarPrecio(btnActivo, btnInactivo) {
      const precio = btnActivo.dataset.precio;
      if (precio) {
        precioLibro.textContent = "$" + parseFloat(precio).toFixed(2);
        console.log("üí∞ Precio actualizado:", precioLibro.textContent);
      }

      btnActivo.classList.add("bg-blue-600", "text-white", "shadow-lg");
      btnActivo.classList.remove("bg-gray-200", "text-gray-800");

      btnInactivo.classList.add("bg-gray-200", "text-gray-800");
      btnInactivo.classList.remove("bg-blue-600", "text-white", "shadow-lg");
    }

    if (btnTapaBlanda && btnTapaDura) {
      btnTapaBlanda.addEventListener("click", () =>
        actualizarPrecio(btnTapaBlanda, btnTapaDura)
      );
      btnTapaDura.addEventListener("click", () =>
        actualizarPrecio(btnTapaDura, btnTapaBlanda)
      );
    } else {
      console.warn("‚ö†Ô∏è Botones de tapa no encontrados o faltan precios.");
    }
  });
</script>
