---
import Layout from "../layouts/Layout.astro";
import productosJson from "../data/productos.json";

// Obtener las categorías dinámicamente desde el archivo JSON
const categorias = Object.keys(productosJson).map((categoria) => {
  // Definir un icono y descripción por cada categoría
  const descripcionPorCategoria: Record<string, string> = {
    belleza: "Productos para resaltar tu belleza.",
    deporte: "Accesorios para un estilo de vida activo.",
    hogar: "Mejora tu espacio con productos esenciales.",
    moda: "Tendencias y estilos únicos.",
    tecnologia: "Los gadgets más innovadores."
  };

  const iconosPorCategoria: Record<string, string> = {
    belleza: "💄",
    deporte: "🏋️‍♂️",
    hogar: "🏡",
    moda: "👗",
    tecnologia: "📱"
  };

  return {
    nombre: categoria,
    icono: iconosPorCategoria[categoria] || "📦",  // Icono por defecto si no se encuentra
    descripcion: descripcionPorCategoria[categoria] || "Descripción no disponible"
  };
});
---

<Layout title="Inicio">
  <section class="text-center py-10">
    <h1 class="text-5xl font-bold text-blue-600">Bienvenido a Astro Amazon</h1>
    <p class="text-lg text-gray-600 mt-4">Descubre los mejores productos con nuestras recomendaciones.</p>
  </section>

  <!-- 🔹 Generación dinámica de categorías -->
  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-10">
    {categorias.map((categoria) => (
      <a href={`/categorias/${categoria.nombre}`} class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition">
        <h2 class="text-2xl font-semibold text-gray-900">{categoria.icono} {categoria.nombre.charAt(0).toUpperCase() + categoria.nombre.slice(1)}</h2>
        <p class="text-gray-600">{categoria.descripcion}</p>
      </a>
    ))}
  </section>
</Layout>
